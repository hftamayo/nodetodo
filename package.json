{
  "name": "nodetodo",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.2.0"
  },
  "description": "rest api for a todo application",
  "main": "src/server.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "NODE_ENV=development NODE_PATH=./src ts-node -r ./src/register-aliases.ts src/server.ts",
    "lint": "eslint .",
    "test:health": "jest test/health --testPathPattern=health",
    "test": "jest",
    "integrationcontroller": "jest 'test/controllers/intcontroller.test.ts'",
    "integrationservice": "jest 'test/services/intservice.test.ts'",
    "e2e": "jest 'test/e2e/**/*.ts'",
    "copy-setup-files": "cp -r *.json dist/ 2>/dev/null || :",
    "build": "tsc && npm run copy-setup-files",
    "start": "NODE_ENV=production node -r ./dist/register-aliases.js dist/server.js"
  },
  "author": "Herbert Tamayo",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "mongodb": "^5.6.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.2.5",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
